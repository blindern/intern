{
  "extends": [
    "config:recommended"
  ],
  "lockFileMaintenance": {
    "enabled": true,
    "branchTopic": "lock-file-maintenance-{{packageFile}}",
    "commitMessageExtra": "({{packageFile}})"
  },
  "major": {
    "automerge": false
  },
  "packageRules": [
    {
      "matchFileNames": [
        "frontend/**"
      ],
      "automerge": true,
      "automergeType": "branch"
    },
    {
      "matchFileNames": [
        "backend/**"
      ],
      "automerge": true,
      "automergeType": "branch"
    }
  ],
  "prCreation": "not-pending",
  "minimumReleaseAge": "3 days",
  "prNotPendingHours": 74,
  "timezone": "Europe/Oslo"
}
