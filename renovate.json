{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "lockFileMaintenance": {
    "enabled": true,
    "branchTopic": "lock-file-maintenance-{{packageFile}}",
    "commitMessageExtra": "({{packageFile}})"
  },
  "major": {
    "automerge": false
  },
  "customManagers": [
    {
      "description": "Keep php version up-to-date in workflow.",
      "customType": "regex",
      "managerFilePatterns": [
        "/^\\.github/workflows/.+?\\.ya?ml$/"
      ],
      "matchStrings": [
        "php-version: \"(?<currentValue>.+?)\""
      ],
      "depNameTemplate": "php",
      "packageNameTemplate": "php",
      "datasourceTemplate": "docker",
      "versioningTemplate": "docker",
      "depTypeTemplate": "uses-with"
    },
    {
      "description": "Keep mongodb version up-to-date in workflow.",
      "customType": "regex",
      "managerFilePatterns": [
        "/^\\.github/workflows/.+?\\.ya?ml$/"
      ],
      "matchStrings": [
        "extensions: mongodb-(?<currentValue>.+?)\\s"
      ],
      "depNameTemplate": "mongodb/mongodb",
      "packageNameTemplate": "mongodb/mongodb",
      "datasourceTemplate": "packagist",
      "versioningTemplate": "composer",
      "depTypeTemplate": "uses-with"
    },
    {
      "description": "Keep mongodb version up-to-date in Dockerfile",
      "customType": "regex",
      "managerFilePatterns": [
        "/^backend/Dockerfile$/"
      ],
      "matchStrings": [
        "mongodb-(?<currentValue>.+?)\\s"
      ],
      "depNameTemplate": "mongodb/mongodb",
      "packageNameTemplate": "mongodb/mongodb",
      "datasourceTemplate": "packagist",
      "versioningTemplate": "composer"
    }
  ],
  "packageRules": [
    {
      "matchPackageNames": [
        "php"
      ],
      "matchFileNames": [
        "backend/composer.json"
      ],
      "rangeStrategy": "bump"
    },
    {
      "matchFileNames": [
        "frontend/**"
      ],
      "automerge": true,
      "automergeType": "branch"
    },
    {
      "matchFileNames": [
        "backend/**"
      ],
      "automerge": true,
      "automergeType": "branch"
    },
    {
      "matchFileNames": [
        "calendar-api/**"
      ],
      "automerge": true,
      "automergeType": "branch"
    },
    {
      "matchDepNames": [
        "mongodb/mongodb",
        "mongodb/laravel-mongodb"
      ],
      "groupName": "mongodb"
    },
    {
      "matchPackageNames": [
        "elysia",
        "@elysiajs/cors",
        "@elysiajs/node"
      ],
      "groupName": "elysia"
    }
  ],
  "gitIgnoredAuthors": [
    "114827586+autofix-ci[bot]@users.noreply.github.com"
  ],
  "prCreation": "not-pending",
  "minimumReleaseAge": "3 days",
  "prNotPendingHours": 74,
  "timezone": "Europe/Oslo"
}
